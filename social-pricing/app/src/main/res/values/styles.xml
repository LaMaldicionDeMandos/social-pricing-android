<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/green_panel</item>
        <item name="colorAccent">@color/amber</item>
        <item name="colorPrimaryDark">@color/green_panel_dark</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColor">@color/edit_text</item>
        <item name="subtitleTextColor">@color/subtitle_white_text</item>
    </style>

    <style name="PinkButton" parent="Base.V21.Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/pink_button</item>
        <item name="colorControlHighlight">@color/pink_button_highlight</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="YellowButton" parent="Base.V21.Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/yellow_button</item>
        <item name="colorControlHighlight">@color/yellow_button_highlight</item>
        <item name="android:textColor">@color/blue_grey</item>
    </style>

    <style name="BlueButton" parent="Base.V21.Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/blue_button</item>
        <item name="colorControlHighlight">@color/blue_button_highlight</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="GreenButton" parent="Base.V21.Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/green_button</item>
        <item name="colorControlHighlight">@color/green_button_highlight</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TitleTextWhite" parent="TitleText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TitleText" parent="Theme.AppCompat.Light">
        <item name="android:textSize">@dimen/text_title</item>

    </style>

    <style name="DescText" parent="Theme.AppCompat.Light">
        <item name="android:textSize">@dimen/text_desc</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
